<div class="card" style="max-width: 600px;">
  <div class="row g-1 align-items-center p-1">
    <div class="col-md-2 ">
      <%= image_tag 'cleaning.jpg', height: '50', width: '50', class: 'rounded' %>
    </div>
    <div class="col-md-7">
      <div class="card-body">
        <h5 class="card-title">[Morning] Clear your study desk</h5>
      </div>
    </div>
    <div class="col-md-3">
      <h5 class="card-text d-flex align-items-center"> 10 coins </h5>
      <a class="btn btn-gradient" style="width:100px" data-bs-toggle="modal" data-bs-target="#exampleModal">details</a>
    </div>
  </div>
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel"><%= mission.title %></h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <h3> <%= mission.description %></h3>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-bs-dismiss="modal">DekiTaYo!</button>
          <button type="button" class="btn btn-third">Keep Doing</button>
        </div>
      </div>
    </div>
  </div>
</div>
<%#
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Launch demo modal
</button> %>
