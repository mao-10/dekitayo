<div class="card" style="max-width: 900px;height:70px;">
  <div class="row g-1 align-items-center">
    <div class="col-md-2">
      <h5 class="text-center"><%= mission.date %></h5>
    </div>
    <div class="col-md-6">

      <p><%= mission.title %></p>
      <p class="<%= status_color_class(mission.status) %>">Status: <%= mission.status %></p>

        <p><%= mission.title %></p>
<i class="fa-solid fa-circle-info"></i>See description


    </div>
    <div class="col-md-2">
      <h5 class="card-text d-flex align-items-center">
        <%= pluralize(mission.coins, "coin")%>
      </h5>

      <i class="fa-solid fa-circle-info"></i>

    </div>

    <div class="col-md-2">
        <p class="<%= status_color_class(mission.status) %>">Status: <%= mission.status %></p>
    </div>


  </div>
  <!-- Modal -->
  <div class="modal fade" id="<%= dom_id(mission) %>" tabindex="-1" aria-labelledby="<%= dom_id(mission) %>Label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="<%= dom_id(mission) %>Label">
            <%= mission.title %>
          </h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <h3><%= mission.description %></h3>
          <p class="<%= status_color_class(mission.status) %>">Status = <%= mission.status %></p>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
