<section class="form-popup popup-form-container" id="myForm">
  <div class="popup-bg-container" >
    <header>
      <h2>Create a New Mission</h2>
    </header>
    <div>
      <%= simple_form_for [:manage, @child, @mission], remote: true do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :date, html5: true %>
        <%= f.input :coins %>
        <%= f.input :category %>
        <%= f.input :required_photo %>
        <%= f.input :photo, as: :file %>

        <div class="d-flex justify-content-center">
          <%= f.submit "Submit Mission", class: "btn btn-primary btn-popup"%>
        </div>
      <% end %>
    </div>
  </div>
</section>
