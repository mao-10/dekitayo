<h1 class="text-center mb-0 p-3" id="show-body"><strong> Dekitayo dashboard of your kids</strong></h1>
<div class="show_container" id="show-body">
  <main class="row">
    <aside class="col-1 card mb-3">
      <!-- menu bar from the end -->
      <a data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
        <div class="circular-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= @child.photo.attached? ? cl_image_path(@child.photo.key) : image_path('monkey.jpg') %>')">
        </div>
      </a>
      <p><%= @child.name %></p>
      <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="offcanvasExampleLabel">Offcanvas</h5>
          <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
          <p> <i class="fa-solid fa-pen-to-square"></i> edit profiles </p>
          <p> <i class="fa-regular fa-comment"></i> Notification setting </p>
          <p> <i class="fa-solid fa-plus"></i> Add new profiles </p>
          <div class="dropdown mt-3">
            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
              Select profile
            </button>
            <ul class="dropdown-menu">
              <% @children.each do |child|%>
                <li><a class="dropdown-item" href="#">
                    <div class="circular-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= child.photo.attached? ? cl_image_path(child.photo.key) : image_path('monkey.jpg') %>')">
                      <%= link_to child.name, manage_child_path(child), class: "btn fs-9 text-white" %>
                    </div>
                    <%= link_to "Select Profile", "#", class: "dropdown-item" %>
                  </a></li>
              <% end %>
              <div class="circular-image" style="background-color: grey">
                <%= link_to image_tag("plus-sign.png", class: "d-block w-100"), new_manage_child_path, class: "btn" %>
              </div>
            </ul>
          </div>
        </div>
      </div>
      <!--end of menu bar -->
      <br>
      <br>
      <button class="parent-btn" data-bs-toggle="modal" data-bs-target="#exampleModal"> <i class="fa-solid fa-rocket"></i> New Mission</button>
      <br>
      <br>
      <button class="parent-btn"> <i class="fa-regular fa-message"></i> Message </button>
      <br>
      <br>
      <button class="parent-btn" onclick="#"> <i class="fa-regular fa-map"></i> Map </button>
      <br>
      <br>
      <button class="parent-btn" onclick="#"> <i class="fa-solid fa-gift"></i> <%= link_to "reward", rewards_path, class: "nav-link nav-link-1 text-white" %></button>
      <!-- aside menu bar  -->
    </aside>
    <div class ="col-11">
      <!-- summary number from here  -->
      <div class="d-flex">
        <div class="col-4 card parent-card-dashboard">
          <div class="card-body">
            <h5 class="card-title"> Today Mission <i class="fa-solid fa-pencil"></i></h5>
            <h6 class="card-subtitle mb-2 text-muted"></h6>
            <h1 class="card-text"></h1>
            <h1 mt-3><%=@child.missions.daily_missions.where(status: "finished").count %>/<%= @child.missions.daily_missions.size %></h1>
          </div>
        </div>
        <div class="col-4 card parent-card-dashboard">
            <div class="card-body">
                <h5 class="card-title"> Completion Rate <i class="fa-solid fa-percent"></i></h5>
                <h6 class="card-subtitle mb-2 text-muted"></h6>
                <h1 class="card-text">
                <%=@child.missions.daily_missions.where(status: "finished").count.to_f/@child.missions.daily_missions.size * 100%>
                </h1>
            </div>
        </div>
        <div class="col-4 card parent-card-dashboard">
          <div class="card-body">
            <h5 class="card-title"> Coins <i class="fa-solid fa-coins"></i></h5>
            <h6 class="card-subtitle mb-2 text-muted"></h6>
            <h1 class="card-text">100</h1>
          </div>
        </div>
      </div>
      <!-- summary number to here  -->
      <!--bootstrap tabs -->
      <header class="main-top">
        <ul class="nav nav-tabs nav-justified mt-3" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">Today missions</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false">Future missions</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="chart-tab" data-bs-toggle="tab" data-bs-target="#chart-tab-pane" type="button" role="tab" aria-controls="chart-tab-pane" aria-selected="false">Mission chart</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="notification-tab" data-bs-toggle="tab" data-bs-target="#notification-tab-pane" type="button" role="tab" aria-controls="notification-tab-pane" aria-selected="false">Notifications</button>
          </li>
        </ul>
      </header>
      <!-- Home TAB ("Today's missions") -->
      <div class="tab-content p-3" id="myTabContent">
        <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
          <%= pluralize(@child.missions.daily_missions.size, "mission") %>
          <% @child.missions.daily_missions.each do |mission| %>
            <%= render partial: "manage/children/mission_card_parent", locals: { mission: mission } %>
          <% end %>
        </div>
        <!-- PROFILE TAB ("All missions") -->
        <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
          <!-- Filtering Option -->
          <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault"> Started</label>
          </div>
          <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault"> Finished</label>
          </div>
          <!-- Show all missions in the future -->
          <%= pluralize(@child.missions.future_missions.size, "mission") %>
          <% @child.missions.future_missions.each do |mission| %>
            <%= render partial: "manage/children/mission_card_parent", locals: { mission: mission } %>
          <% end %>
        </div>
        <!--charts -->
        <div class="tab-pane fade" id="chart-tab-pane" role="tabpanel" aria-labelledby="chart-tab" tabindex="0">
          <div class="chart-container">
            <div class="chart mb-4">
              <div class="d-flex">
                <div class="bg-white mt-4">
                  <%= line_chart @child.completed_missions_data,
                      colors: ["#98C1D9", "#98C1D9"],
                      width: "700px", height: "400px",
                      xtitle: "Days",
                      ytitle: "Completed Missions",
                      label: "Missions Assigned to #{@child.name}" %>
                </div>
                <p class="align-self-center">Missions completed by <%= @child.name%></p>
              </div>
            </div>
            <div class="chart">
              <div class="d-flex">
                <div class="bg-white">
                  <%= column_chart @child.assigned_missions_data,
                        id: "users-chart",
                        width: "700px", height: "400px",
                        colors: ["#004643", "#666"],
                        xtitle: "Days",
                        ytitle: "Assigned Missions",
                        label: "Missions Assigned to #{@child.name}"  %>
                </div>
                <p class="align-self-center">Missions assigned by me</p>
              </div>
            </div>
          </div>
        </div>
        <!-- noti ----->
        <div class="tab-pane fade" id="notification-tab-pane" role="tabpanel" aria-labelledby="notification-tab" tabindex="0">
          <div class="notif-container">
            <% @claimed_rewards.each do |claimed_reward| %>
              <% if claimed_reward.read == false %>
                <div class="card w-50">
                  <div class="card-header">
                    <p>Reward Claimed <%= claimed_reward.claimed_at %></p>
                  </div>
                  <div class="card-body">
                    <h5 class="card-title"><%= claimed_reward.reward.name %></h5>
                    <p class="card-text"><%= claimed_reward.reward.description %></p>
                    <p class="card-text"><%= claimed_reward.reward.price %></p>
                    <p class="card-text"><%= claimed_reward.reward.inventory %> left</p>
                    <%= simple_form_for [claimed_reward] do |f|%>
                      <%= f.input :read, as: :hidden, input_html: {value: true}%>
                      <%= f.submit "OK", class: "btn btn-gradient"%>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content modal-style">
      <div class="modal-header">
        <h1 class="modal-title fs-5 mt-4" id="exampleModalLabel">Create a Mission</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [:manage, @child, @mission], remote: true do |f| %>
          <div class="d-flex justify-content-between">
            <div class="form-column">
              <%= f.input :title %>
              <%= f.input :coins %>
              <%= f.input :category, collection: ["chore", "responsibility", "activity", "organization", "study", "other"], include_blank: false  %>
              <%= f.input :required_photo %>
            </div>
            <div class="form-colum">
              <%= f.input :description %>
              <%= f.input :date, html5: true %>
              <%= f.input :photo, as: :file %>
            </div>
          </div>
          <div class="d-flex justify-content-center">
            <%= f.submit "Submit Mission", class: "btn btn-primary btn-popup"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
