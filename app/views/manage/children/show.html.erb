<h1 class="text-center p-3"><strong>This is the dashboard of <%= @child.name %> id <%=@child.id  %></strong></h1>
<div class="container">
  <main class="row">
    <aside class="col-2">
      <!-- menu bar  -->


      <a data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
        <div class="circular-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= @child.photo.attached? ? cl_image_path(@child.photo.key) : image_path('monkey.jpg') %>')">
        </div>

        </a>
        <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
          <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasExampleLabel">Offcanvas</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
          </div>
          <div class="offcanvas-body">
            <div>
            </div>
            <div class="dropdown mt-3">
              <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                Select profile
              </button>
              <ul class="dropdown-menu">
                <% @children.each do |child|%>
                  <li><a class="dropdown-item" href="#">
                      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= child.photo.attached? ? cl_image_path(child.photo.key) : image_path('monkey.jpg') %>')">
                        <%= link_to child.name, manage_child_path(child_id: child.id), class: "btn btn-ghost text-white fs-4" %>
                      </div>
                    </a></li>
                <% end %>
                <div class="card-category" style="background-color: grey">
                  <%= link_to image_tag("plus-sign.png", class: "d-block w-100"), new_manage_child_path, class: "btn" %>
                </div>
                <li><a class="dropdown-item" href="#"><%= @child.user%></a></li>
                <li><a class="dropdown-item" href="#">Kurumi</a></li>
              </ul>
            </div>
            <br>
            <p> <i class="fa-solid fa-pen-to-square"></i> manage profiles </p>
            <p> <i class="fa-regular fa-comment"></i> Notification setting </p>
            <p> <i class="fa-solid fa-plus"></i> Add new profiles </p>
          </div>
        </div>
        <br>
        <br>
        <button class="btn btn-primary" onclick="toggleForm()"> <i class="fa-solid fa-rocket"></i> New Mission</button>
        <br>
        <br>
        <button class="btn btn-primary" onclick="toggleForm()"> <i class="fa-regular fa-message"></i> Message </button>
        <br>
        <br>
        <button class="btn btn-primary" onclick="toggleForm()"> <i class="fa-regular fa-map"></i> Map </button>
        <!-- menu bar  -->
      </aside>
      <div class ="col-10">
        <header class="main-top">
          <nav>
            <!--bootstrap tabs-->
            <ul class="nav nav-tabs" id="myTab" role="tablist">

  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">Today missions</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false">All missions</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact-tab-pane" type="button" role="tab" aria-controls="contact-tab-pane" aria-selected="false">Create new mission</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="disabled-tab" data-bs-toggle="tab" data-bs-target="#disabled-tab-pane" type="button" role="tab" aria-controls="disabled-tab-pane" aria-selected="false" disabled>Account settings</button>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
        <h2>Missions you assigned </h2>
            <%= pluralize(@child.missions.daily_missions.size, "mission") %>
            <% @child.missions.daily_missions.each do |mission| %>
              <%= render partial: "missions/mission_card", locals: { mission: mission } %>
          <% end %>
  </div>
  <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
    <h2>Missions you assigned </h2>
      <%= pluralize(@child.missions.future_missions.size, "mission") %>
        <% @child.missions.future_missions.each do |mission| %>
          <%= render partial: "missions/mission_card", locals: { mission: mission } %>
        <% end %>

  </div>
  <div class="tab-pane fade" id="contact-tab-pane" role="tabpanel" aria-labelledby="contact-tab" tabindex="0">...</div>
  <div class="tab-pane fade" id="disabled-tab-pane" role="tabpanel" aria-labelledby="disabled-tab" tabindex="0">...</div>
</div>
<!--bootstrap tabs-->



    <div class="map">
    </div>
            </section>
         </div>


</div>


<section class="form-popup popup-form-container" id="myForm" hidden>
  <div class="popup-bg-container">
    <header>
      <h2>Create a New Mission</h2>
    </header>
    <%= simple_form_for [:manage, @child, @mission], remote: true, html: { onsubmit: "return submitForm();" } do |f| %>
      <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :date, html5: true %>
        <%= f.input :coins %>
        <%= f.input :category %>
        <%= f.input :required_photo %>
        <%= f.input :photo, as: :file %>

        <div class="d-flex justify-content-center">
          <%= f.submit "Submit Mission", class: "btn btn-primary btn-popup"%>

              <li class="nav-item" role="presentation">
                <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">Today missions</button>
              </li>
              <li class="nav-item" role="presentation">
                <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false">All missions</button>
              </li>
              <!-- <li class="nav-item" role="presentation">
              <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact-tab-pane" type="button" role="tab" aria-controls="contact-tab-pane" aria-selected="false">Create new mission</button>
              <button class="btn btn-primary" onclick="toggleForm()"> Add a Mission</button>
            </li> -->
              <li class="nav-item" role="presentation">
                <li class="nav-item" role="presentation">
                  <button class="nav-link" id="disabled-tab" data-bs-toggle="tab" data-bs-target="#disabled-tab-pane" type="button" role="tab" aria-controls="disabled-tab-pane" aria-selected="false" disabled> Reward Setting </button>
                </li>
                <button class="nav-link" id="disabled-tab" data-bs-toggle="tab" data-bs-target="#disabled-tab-pane" type="button" role="tab" aria-controls="disabled-tab-pane" aria-selected="false" disabled>Account settings</button>
              </li>
            </ul>
            <div class="tab-content" id="myTabContent">
              <!-- HOME TAB ("Today missions") -->
              <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
                <h1><%=@child.missions.where(status: "finished").count %>/<%= @child.missions.size %></h1>
                <% if @child.missions.daily_missions.find_by(status: "started")%>
                  <p class="text-center">~You have <%= pluralize(@child.missions.size, "mission") %> to complete today~</p>
                <% else %>
                  <p class="text-center">~No missions available~</p>
                <% end %>
                <div id="child-missions">
                  <% @child.missions.each do |mission| %>
                    <% unless mission.status == "finished"%>
                      <%= render partial: "shared/mission-title", locals: { mission: mission } %>
                    <% end %>
                  <% end %>
                </div>
              </div>
              <!-- PROFILE TAB ("All missions") -->
              <div class="tab-pane fade p-3" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
                <h2>Missions you assigned </h2>
              </div>
              <div class="tab-pane fade" id="contact-tab-pane" role="tabpanel" aria-labelledby="contact-tab" tabindex="0">
                <button class="btn btn-primary" onclick="toggleForm()"> Add a Mission</button>
                <%#
    <div class="tab-pane fade" onclick="toggleForm()" id="contact-tab-pane" role="tabpanel" aria-labelledby="contact-tab" tabindex="0">
  %>
              </div>
              <div class="tab-pane fade" id="disabled-tab-pane" role="tabpanel" aria-labelledby="disabled-tab" tabindex="0">
                Set new reward
              </div>
            </div>
          </div>
          <!--bootstrap tabs-->
          <div class="map">
          </div>

        </div>
      </div>
      <section class="form-popup popup-form-container" id="myForm" hidden>
        <div class="popup-bg-container">
          <header>
            <h2>Create a New Mission</h2>
          </header>
          <%= simple_form_for [:manage, @child, @mission], remote: true, html: { onsubmit: "return submitForm();" } do |f| %>
            <%= f.input :title %>
            <%= f.input :description %>
            <%= f.input :date, html5: true %>
            <%= f.input :coins %>
            <%= f.input :category %>
            <%= f.input :required_photo %>
            <%= f.input :photo, as: :file %>
            <div class="d-flex justify-content-center">
              <%= f.submit "Submit Mission", class: "btn btn-primary btn-popup"%>
            </div>
          <% end %>
        </div>
      </section>
      <script defer>
        const toggleForm = () => {
          const form = document.getElementById("myForm");
          form.hidden = !form.hidden;
        };

        const submitForm = () => {
          const form = document.getElementById("myForm");
          form.hidden = true;
          return true;
        };
      </script>
